<%- include('../elements/head'); -%>

<main class="container">
  <div class="card">
    <div class="card-header">
        Add a new post
    </div>
    <div class="card-body">

      <div class="row">
        <div class="col-md-4">
          <img id="image-preview" src="https://via.placeholder.com/600x600" alt="" class="img-fluid rounded">
        </div>
        <div class="col-md-8">
          <form action="/blog/new" method="POST" >

            <div class="form-floating mb-3">
              <select name="category" class="form-select" >
                <option selected>Select one...</option>
                <% for(let category of categories){ %>
                  <option value="<%= category._id %>" required ><%= category.name %></option>
                <% } %>
              </select>
              <label>Category</label>
            </div>

            <div class="form-floating mb-3">
              <input name="title" type="text" class="form-control" placeholder="" required >
              <label>Title</label>
            </div>

            <div class="form-floating mb-3">
              <input name="image" type="text" class="form-control" placeholder="" id="inputImage" required >
              <label>Url image</label>
              <div class="form-text">Example: https://place-puppy.com/600x600</div>
            </div>

            <div class="form-floating mb-3">
              <textarea name="text" class="form-control" placeholder="Type the post text here" height="200" required ></textarea>
              <label>Post text</label>
            </div>

            <button class="btn btn-dark" type="submit" >Create Post</button>
          </form>
        </div>
    </div>
  </div>
</main>

<script>
  const imgPreview = document.getElementById('image-preview');
  document.getElementById("inputImage").addEventListener("blur", (e) => {
    let img = e.target.value;
    imgPreview.src = (img != "")? img : 'https://via.placeholder.com/600x600';
  });
</script>

